{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "target": "ES2018",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "outDir": "./cjs/es2018"
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
